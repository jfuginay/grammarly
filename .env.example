# Environment Variables

# Database Configuration
DATABASE_URL="postgresql://your_username:your_password@your_host:5432/your_database"

# Optional: Direct URL for connection pooling (development only)
# DIRECT_URL="postgresql://[direct-connection-string]"

# OpenAI API Key for text correction
OPENAI_API_KEY=your_openai_api_key_here

# Site URL (optional - defaults to production URL)
NEXT_PUBLIC_SITE_URL='http://localhost:3000'

# Additional allowed origins (comma-separated)
# This is useful for adding custom domains without code changes
ADDITIONAL_ALLOWED_ORIGINS=https://custom-domain.com,https://another-domain.org

# Development Environment Indicator
NEXT_PUBLIC_CO_DEV_ENV=development

# Auth0 Configuration
AUTH0_DOMAIN=your-auth0-domain.region.auth0.com
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_CLIENT_SECRET=your-auth0-client-secret
AUTH0_REDIRECT_URI=http://localhost:3000/auth/callback
AUTH0_AUDIENCE=https://your-auth0-domain.region.auth0.com/api/v2/

# Public Auth0 variables (accessible in browser)
NEXT_PUBLIC_AUTH0_DOMAIN=your-auth0-domain.region.auth0.com
NEXT_PUBLIC_AUTH0_CLIENT_ID=your-auth0-client-id
