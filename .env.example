# Environment Variables

# OpenAI API Key for text correction
OPENAI_API_KEY=your_openai_api_key_here

# Database URL for Prisma
DATABASE_URL="your_database_url_here"

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Additional allowed origins (comma-separated)
# This is useful for adding custom domains without code changes
ADDITIONAL_ALLOWED_ORIGINS=https://custom-domain.com,https://another-domain.org

# Development Environment Indicator
NEXT_PUBLIC_CO_DEV_ENV=development

# Security Headers
NEXT_PUBLIC_SECURE_HEADERS=true

# Groq API Key
GROQ_API_KEY="your_grok_api_key_here"
